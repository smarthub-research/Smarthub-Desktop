{
  "name": "smarthub-desktop",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@abandonware/noble": "^1.9.2-26",
    "@electron/remote": "^2.1.2",
    "@radix-ui/react-slot": "^1.2.3",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/supabase-js": "^2.49.4",
    "@tailwindcss/postcss": "^4.0.10",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^13.5.0",
    "chart.js": "^4.4.8",
    "chartjs-adapter-date-fns": "^3.0.0",
    "chartjs-plugin-zoom": "^2.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "electron": "^34.3.0",
    "fft-js": "^0.0.12",
    "jspdf": "^3.0.3",
    "lucide-react": "^0.525.0",
    "modern-screenshot": "^4.6.6",
    "next": "^15.2.1",
    "papaparse": "^5.5.2",
    "postcss": "^8.5.3",
    "postgres": "^3.4.5",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.3.0",
    "react-charts": "^3.0.0-beta.57",
    "react-day-picker": "^9.8.0",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "react-scripts": "5.0.1",
    "recharts": "^2.15.4",
    "sass": "^1.85.1",
    "tailwind-merge": "^3.3.1",
    "wait-on": "^8.0.2",
    "web-vitals": "^2.1.4"
  },
  "main": "electron/main.js",
  "scripts": {
    "start": "concurrently \"cross-env BROWSER=none next dev --turbopack\" \"npm run electron:start\" \"npm run fastapi:start\"",
    "build": "next build",
    "test": "next test",
    "test:jest": "jest --config jest.config.cjs",
    "test:calculations": "./test-calculations.sh",
    "test:calculations-simple": "jest --config jest.config.cjs --testPathPattern=calculationUtils.simple.test.js",
    "test:calculations-integration": "jest --config jest.config.cjs --testPathPattern=calculationUtils.integration.test.js",
    "test:calculations-realbackend": "jest --config jest.config.cjs --testPathPattern=calculationUtils.realbackend.test.js",
    "test:calculations-comprehensive": "./test-comprehensive.sh",
    "backend:start": "cd backend && source ../.venv/bin/activate && python -m main",
    "eject": "next eject",
    "dev": "next dev",
    "electron:start": "wait-on http://localhost:3000 && electron --trace-deprecation .",
    "fastapi:start": "cd backend && source ../.venv/bin/activate && python -m main",
    "pytest": "cd backend && ../.venv/bin/python -m pytest -vv"
  },
  "build": {
    "appId": "com.kellengary.smarthub",
    "mac": {
      "icon": "public/icons/icon.icns"
    },
    "win": {
      "icon": "public/icons/icon.ico"
    },
    "linux": {
      "icon": "public/icons/icon.png"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "node-fetch": "^2.7.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "tailwindcss": "^4.1.8",
    "tw-animate-css": "^1.3.5"
  }
}
